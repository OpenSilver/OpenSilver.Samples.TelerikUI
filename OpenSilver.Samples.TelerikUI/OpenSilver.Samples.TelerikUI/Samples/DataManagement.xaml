<UserControl
    x:Class="OpenSilver.Samples.TelerikUI.Samples.DataManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlskit="clr-namespace:OpenSilver.ControlsKit;assembly=OpenSilver.ControlsKit.Controls"
    xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI">

    <StackPanel>
        <TextBlock Text="DataManagement" Style="{StaticResource PageHeader_Style}"/>
        <controlskit:StaggeredPanel DesiredColumnWidth="230" ProgressiveRenderingChunkSize="2">
            <local:RadListBox_Demo HorizontalAlignment="Center"/>
            <local:RadTreeListView_Demo HorizontalAlignment="Center"/>
            <local:RadGridView_Demo HorizontalAlignment="Center"/>
        </controlskit:StaggeredPanel>
    </StackPanel>
</UserControl>
