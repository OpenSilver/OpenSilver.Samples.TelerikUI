<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadColorEditor_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="350"
                    Width="400">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadColorEditor"
                            Foreground="#FFFE7484"
                            Background="#DAB6BB"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <telerik:RadColorEditor x:Name="colorEditor"
                                        SelectedColor="Red"
                                        ColorMode="RGB" />
            </Grid>
            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FFFE7484"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>

</UserControl>
