<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadPropertyGrid_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:propertyGrid="clr-namespace:Telerik.Windows.Controls.Data.PropertyGrid;assembly=Telerik.Windows.Controls.Data">

    <UserControl.Resources>
        <DataTemplate x:Key="opacityEditorTemplate">
            <telerik:RadNumericUpDown Minimum="0"
                                      Maximum="1"
                                      SmallChange="0.01"
                                      LargeChange="0.1"
                                      propertyGrid:AutoBindBehavior.UpdateBindingOnElementLoaded="Value" />
        </DataTemplate>
        <DataTemplate x:Key="widthHeightEditorTemplate">
            <telerik:RadNumericUpDown Minimum="0"
                                      Maximum="100"
                                      SmallChange="1"
                                      LargeChange="10"
                                      propertyGrid:AutoBindBehavior.UpdateBindingOnElementLoaded="Value" />
        </DataTemplate>
    </UserControl.Resources>
    
    <ContentControl Style="{StaticResource Card_Style}"
                    Height="550"
                    Width="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadPropertyGrid"
                            Foreground="#FFFF657F"
                            Background="#FFCB8591"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <telerik:RadButton Content="Reload Data"
                                   Click="RadButton_Click" />
                <telerik:RadPropertyGrid x:Name="rpg"
                                         Grid.Column="0"
                                         Grid.Row="1"
                                         AutoGeneratePropertyDefinitions="True"
                                         AutoGeneratingPropertyDefinition="rpg_AutoGeneratingPropertyDefinition" />
                <Image x:Name="image"
                       Grid.Column="1"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       Source="/OpenSilver.Samples.TelerikUI;component/Other/Planets/Saturn.png"
                       Stretch="Fill"
                       Height="100"
                       Width="100"
                       SizeChanged="image_SizeChanged">
                    <Image.RenderTransform>
                        <RotateTransform Angle="0" />
                    </Image.RenderTransform>
                </Image>
            </Grid>

            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FFFF657F">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadPropertyGrid_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPropertyGrid" />
                    <local:ViewSourceButtonInfo FileName="RadPropertyGrid_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPropertyGrid" />
                    <local:ViewSourceButtonInfo FileName="RadPropertyGrid_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPropertyGrid" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>

</UserControl>
