<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadTimeBar_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="550"
                    Width="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadTimeBar"
                            Foreground="#FFF78069"
                            Background="#FFDCA59C"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <telerik:RadCartesianChart x:Name="chart1"
                                           MinHeight="1"
                                           PlotAreaClipChanged="chart1_PlotAreaClipChanged">
                    <telerik:RadCartesianChart.HorizontalAxis>
                        <telerik:DateTimeContinuousAxis Visibility="Collapsed" />
                    </telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:RadCartesianChart.VerticalAxis>
                        <telerik:LinearAxis SmartLabelsMode="SmartStepAndRange" />
                    </telerik:RadCartesianChart.VerticalAxis>
                    <telerik:RadCartesianChart.Series>
                        <telerik:LineSeries CategoryBinding="Date"
                                            ValueBinding="Val"
                                            ItemsSource="{Binding}" />
                    </telerik:RadCartesianChart.Series>
                </telerik:RadCartesianChart>
                <telerik:RadTimeBar x:Name="timeBar1"
                                    PeriodStart="{Binding HorizontalAxis.ActualRange.Minimum, ElementName=chart1}"
                                    PeriodEnd="{Binding HorizontalAxis.ActualRange.Maximum, ElementName=chart1}"
                                    Background="Transparent">
                    <telerik:RadTimeBar.Intervals>
                        <telerik:MonthInterval />
                        <telerik:WeekInterval />
                        <telerik:MonthInterval />
                        <telerik:DayInterval />
                    </telerik:RadTimeBar.Intervals>
                    <telerik:RadTimeBar.Content>
                        <Border x:Name="timeBarContent1"
                                SizeChanged="timeBarContent_SizeChanged" />
                    </telerik:RadTimeBar.Content>
                </telerik:RadTimeBar>
            </Grid>
            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FF6F7DFF">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadTimeBar_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTimeBar" />
                    <local:ViewSourceButtonInfo FileName="RadTimeBar_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTimeBar" />
                    <local:ViewSourceButtonInfo FileName="RadTimeBar_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTimeBar" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>

</UserControl>
