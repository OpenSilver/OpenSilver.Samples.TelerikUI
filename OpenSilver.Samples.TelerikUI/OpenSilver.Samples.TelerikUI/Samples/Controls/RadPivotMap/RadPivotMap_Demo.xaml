<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadPivotMap_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:datavis="clr-namespace:Telerik.Windows.Controls.TreeMap;assembly=Telerik.Windows.Controls.DataVisualization">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="550"
                    Width="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadPivotMap"
                            Foreground="#FFFCAB54"
                            Background="#FFCCA376"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <telerik:RadPivotMap x:Name="radPivotMap"
                                     ValuePath="GrossSales"
                                     LabelPath="GrossSales"
                                     LabelFormat="{}{0:C0}"
                                     ItemsSource="{Binding}">
                    <telerik:RadPivotMap.GroupDefinitions>
                        <datavis:GroupDefinition Member="Genre" />
                        <datavis:GroupDefinition Member="Title" />
                    </telerik:RadPivotMap.GroupDefinitions>
                </telerik:RadPivotMap>
            </Grid>
            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FCAB54">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadPivotMap_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPivotMap" />
                    <local:ViewSourceButtonInfo FileName="RadPivotMap_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPivotMap" />
                    <local:ViewSourceButtonInfo FileName="RadPivotMap_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPivotMap" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>

</UserControl>
