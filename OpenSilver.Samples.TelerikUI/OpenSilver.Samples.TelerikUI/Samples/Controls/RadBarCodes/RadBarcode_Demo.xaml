<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadBarcode_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="500"
                    Width="750">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadBarcode"
                            Foreground="#FFFCAB54"
                            Background="#FFCCA376"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <telerik:RadComboBox x:Name="barcodeComboBox"
                                     Grid.Row="0"
                                     DisplayMemberPath="Barcode"/>
                <telerik:RadTransitionControl x:Name="radTransitionControl"
                                              Grid.Row="1"
                                              Content="{Binding SelectedItem, ElementName=barcodeComboBox}">
                    <telerik:RadTransitionControl.ContentTemplate>
                        <DataTemplate>
                            <ContentPresenter Content="{Binding Demo}"
                                              Margin="30,15"/>
                        </DataTemplate>
                    </telerik:RadTransitionControl.ContentTemplate>
                </telerik:RadTransitionControl>
            </Grid>
            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FCAB54"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>

</UserControl>
