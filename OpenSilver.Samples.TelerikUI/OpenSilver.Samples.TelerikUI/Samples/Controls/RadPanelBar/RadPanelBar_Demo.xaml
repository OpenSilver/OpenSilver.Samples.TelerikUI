<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadPanelBar_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="225"
                    Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadPanelBar"
                            Foreground="#FF8D73FF"
                            Background="#FF9B8FD1"
                            Style="{StaticResource HeaderControl_Style}" />
            <telerik:RadPanelBar Grid.Row="1"
                                 Width="130"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Top">
                <telerik:RadPanelBarItem Header="Item 1">
                    <TextBlock Text="Content 1"
                               Height="20" />
                    <TextBlock Text="Content 2"
                               Height="20" />
                    <TextBlock Text="Content 3"
                               Height="20" />
                </telerik:RadPanelBarItem>
                <telerik:RadPanelBarItem Header="Item 2">
                    <TextBlock Text="Content 1"
                               Height="20" />
                    <TextBlock Text="Content 2"
                               Height="20" />
                </telerik:RadPanelBarItem>
                <telerik:RadPanelBarItem Header="Item 3" />
            </telerik:RadPanelBar>

            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FF8D73FF"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>
</UserControl>
