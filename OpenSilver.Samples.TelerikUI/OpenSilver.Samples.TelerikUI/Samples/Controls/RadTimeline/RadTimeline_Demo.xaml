<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadTimeline_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="430"
                    Width="750">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadTimeline"
                            Foreground="#FFFCAB54"
                            Background="#FFCCA376"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <telerik:Label Grid.Column="0"
                                   Grid.Row="0"
                                   Content="Is Grouping : " />
                    <CheckBox Grid.Column="1"
                              Grid.Row="0"
                              IsThreeState="False"
                              Checked="RadToggleButton_Checked"
                              Unchecked="RadToggleButton_Unchecked" />
                    <telerik:Label Grid.Column="0"
                                   Grid.Row="1"
                                   Content="GroupExpandMode : " />
                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal">
                        <telerik:RadRadioButton x:Name="choiceNone"
                                                Content="None"
                                                Checked="NoneRadioButton_Checked"
                                                IsEnabled="False"/>
                        <telerik:RadRadioButton x:Name="choiceSingle"
                                                Content="Single"
                                                Checked="SingleRadioButton_Checked"
                                                IsEnabled="False"/>
                        <telerik:RadRadioButton x:Name="choiceMultiple"
                                                Content="Multiple"
                                                Checked="MultipleRadioButton_Checked"
                                                IsEnabled="False"/>
                    </StackPanel>
                </Grid>
                <telerik:RadTimeline x:Name="timeline"
                                     Grid.Row="2"
                                     PeriodStart="2011-01-01"
                                     PeriodEnd="2012-01-01"
                                     VisiblePeriodStart="2011-01-01"
                                     VisiblePeriodEnd="2011-02-01"
                                     StartPath="StartDate"
                                     DurationPath="Duration"
                                     ItemsSource="{Binding TimelineItems}">
                    <telerik:RadTimeline.Intervals>
                        <telerik:YearInterval />
                        <telerik:MonthInterval />
                        <telerik:WeekInterval />
                        <telerik:DayInterval />
                    </telerik:RadTimeline.Intervals>
                </telerik:RadTimeline>
            </Grid>
            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FCAB54"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>

</UserControl>
