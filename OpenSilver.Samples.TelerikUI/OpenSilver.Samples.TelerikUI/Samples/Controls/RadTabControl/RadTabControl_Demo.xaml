<UserControl
    x:Class="OpenSilver.Samples.TelerikUI.RadTabControl_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI">

    <ContentControl Style="{StaticResource Card_Style}" Height="150" Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="RadTabControl" Foreground="#FFF78069" Background="#FFDCA59C" Style="{StaticResource HeaderControl_Style}"/>
            <telerik:RadTabControl Grid.Row="1">
                <telerik:RadTabControl.Items>
                    <telerik:RadTabItem Header="Tab 1">
                        <TextBlock Text="Item 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </telerik:RadTabItem>
                    <telerik:RadTabItem Header="Tab 2">
                        <TextBlock Text="Item 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </telerik:RadTabItem>
                </telerik:RadTabControl.Items>
            </telerik:RadTabControl>
            <local:ViewSourceButton Grid.Row="2" Margin="0,10,0,0" Background="#FF6F7DFF">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadTabControl_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTabControl" />
                    <local:ViewSourceButtonInfo FileName="RadTabControl_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTabControl" />
                    <local:ViewSourceButtonInfo FileName="RadTabControl_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTabControl" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
