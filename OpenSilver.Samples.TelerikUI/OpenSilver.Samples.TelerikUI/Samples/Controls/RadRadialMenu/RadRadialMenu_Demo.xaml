<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadRadialMenu_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="410"
                    Width="335">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadRadialMenu"
                            Foreground="#FFFF657F"
                            Background="#FFCB8591"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <telerik:RadRadialMenu StartAngle="90"
                                       HorizontalAlignment="Center"
                                       Margin="10"
                                       IsOpen="True">
                    <telerik:RadRadialMenuItem Header="Item 1"
                                               CanUserSelect="False">
                        <telerik:RadRadialMenuItem Header="Item 1.1" />
                        <telerik:RadRadialMenuItem Header="Item 1.2" />
                    </telerik:RadRadialMenuItem>
                    <telerik:RadRadialMenuItem Header="Item 2"
                                               CanUserSelect="False">
                        <telerik:RadRadialMenuItem Header="Item 2.1" />
                        <telerik:RadRadialMenuItem Header="Item 2.2" />
                    </telerik:RadRadialMenuItem>
                    <telerik:RadRadialMenuItem Header="Item 3" />
                    <telerik:RadRadialMenuItem Header="Item 4" />
                    <telerik:RadRadialMenuItem Header="Item 5" />
                    <telerik:RadRadialMenuItem Header="Item 6"
                                               CanUserSelect="False">
                        <telerik:RadRadialMenuItem Header="Item 6.1" />
                        <telerik:RadRadialMenuItem Header="Item 6.2">
                            <telerik:RadRadialMenuItem Header="Item 6.2.1" />
                        </telerik:RadRadialMenuItem>
                    </telerik:RadRadialMenuItem>
                    <telerik:RadRadialMenuItem Header="Item 7" />
                    <telerik:RadRadialMenuItem Header="Item 8" />
                </telerik:RadRadialMenu>
            </Grid>

            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FFFF657F"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>

</UserControl>
