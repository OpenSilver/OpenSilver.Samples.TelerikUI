<UserControl x:Class="OpenSilver.Samples.TelerikUI.StepAreaSeries_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <telerik:RadCartesianChart>
                <telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:CategoricalAxis />
                </telerik:RadCartesianChart.HorizontalAxis>
                <telerik:RadCartesianChart.VerticalAxis>
                    <telerik:LinearAxis />
                </telerik:RadCartesianChart.VerticalAxis>
                <telerik:RadCartesianChart.Series>
                    <telerik:StepAreaSeries>
                        <telerik:StepAreaSeries.DataPoints>
                            <telerik:CategoricalDataPoint Category="January"
                                                          Value="2" />
                            <telerik:CategoricalDataPoint Category="February"
                                                          Value="5" />
                            <telerik:CategoricalDataPoint Category="March"
                                                          Value="3" />
                            <telerik:CategoricalDataPoint Category="April"
                                                          Value="10" />
                            <telerik:CategoricalDataPoint Category="May"
                                                          Value="9" />
                            <telerik:CategoricalDataPoint Category="June"
                                                          Value="7" />
                            <telerik:CategoricalDataPoint Category="July"
                                                          Value="1" />
                        </telerik:StepAreaSeries.DataPoints>
                    </telerik:StepAreaSeries>
                </telerik:RadCartesianChart.Series>
            </telerik:RadCartesianChart>
        </Grid>

        <Button Grid.Row="1"
                Content="VIEW SOURCE..."
                Click="ButtonViewSource_Click"
                Background="#FFFF7065"
                Style="{StaticResource ButtonViewSource_Style}" />
    </Grid>

</UserControl>
