<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadSparkline_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="430"
                    Width="750">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadSparklines"
                            Foreground="#FFF78069"
                            Background="#FFDCA59C"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <telerik:RadTabControl HeaderBackground="Transparent">
                    <telerik:RadTabItem Header="Linear">
                        <Grid Margin="30">
                            <Grid.Resources>
                                <Style x:Key="LineShapeStyle"
                                       TargetType="Polyline">
                                    <Setter Property="StrokeThickness"
                                            Value="1" />
                                </Style>
                            </Grid.Resources>

                            <telerik:RadLinearSparkline ItemsSource="{Binding Costs}"
                                                        Background="#F5F5F5"
                                                        ShowNormalRange="True"
                                                        NormalRangeTop="5"
                                                        NormalRangeBottom="2"
                                                        NormalRangeFill="Yellow"
                                                        LineStroke="Red"
                                                        LineShapeStyle="{StaticResource LineShapeStyle}"
                                                        XValuePath="Cost"
                                                        YValuePath="UnitCost" />
                        </Grid>
                    </telerik:RadTabItem>
                    <telerik:RadTabItem Header="Scatter">
                        <Grid Margin="30">
                            <telerik:RadScatterSparkline ItemsSource="{Binding Costs}"
                                                         Background="#F5F5F5"
                                                         ShowNormalRange="True"
                                                         NormalRangeTop="4"
                                                         NormalRangeBottom="-2"
                                                         NormalRangeFill="Yellow"
                                                         ItemFill="Red"
                                                         XValuePath="Cost"
                                                         YValuePath="UnitCost" />
                        </Grid>
                    </telerik:RadTabItem>
                    <telerik:RadTabItem Header="Area">
                        <Grid Margin="30">
                            <Grid.Resources>
                                <Style x:Key="PositiveLineShapeStyle"
                                       TargetType="Polyline">
                                    <Setter Property="StrokeDashArray"
                                            Value="5" />
                                </Style>
                                <Style x:Key="NegativeLineShapeStyle"
                                       TargetType="Polyline">
                                    <Setter Property="StrokeDashArray"
                                            Value="5" />
                                </Style>
                            </Grid.Resources>

                            <telerik:RadAreaSparkline ItemsSource="{Binding Costs}"
                                                      Background="#F5F5F5"
                                                      PositiveAreaFill="Green"
                                                      PositiveAreaStroke="Black"
                                                      PositiveLineShapeStyle="{StaticResource PositiveLineShapeStyle}"
                                                      NegativeAreaFill="Red"
                                                      NegativeAreaStroke="Blue"
                                                      NegativeLineShapeStyle="{StaticResource NegativeLineShapeStyle}"
                                                      XValuePath="Cost"
                                                      YValuePath="UnitCost" />
                        </Grid>
                    </telerik:RadTabItem>
                    <telerik:RadTabItem Header="Column">
                        <Grid Margin="30">
                            <telerik:RadColumnSparkline ItemsSource="{Binding Costs}"
                                                        Background="#F5F5F5"
                                                        ColumnLayoutMode="Normal"
                                                        ColumnWidthPercent="0.5"
                                                        XValuePath="Cost"
                                                        YValuePath="UnitCost" />
                        </Grid>
                    </telerik:RadTabItem>
                </telerik:RadTabControl>
            </Grid>
            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FF6F7DFF"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>

</UserControl>
