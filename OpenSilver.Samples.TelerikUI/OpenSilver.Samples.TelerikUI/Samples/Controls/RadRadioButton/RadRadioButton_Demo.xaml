<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadRadioButton_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="150"
                    Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadRadioButton"
                            Foreground="#FFF78069"
                            Background="#FFDCA59C"
                            Style="{StaticResource HeaderControl_Style}" />
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <telerik:RadRadioButton Content="Choice 1"
                                        IsChecked="True" />
                <telerik:RadRadioButton Content="Choice 2" />
                <telerik:RadRadioButton Content="Choice 3" />
            </StackPanel>

            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FF6F7DFF"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>
</UserControl>
