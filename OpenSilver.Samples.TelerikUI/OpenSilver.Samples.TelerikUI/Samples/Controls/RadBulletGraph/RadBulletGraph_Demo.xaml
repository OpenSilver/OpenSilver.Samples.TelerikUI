<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadBulletGraph_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="500"
                    Width="750">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadVerticalBulletGraph &amp; RadHorizontalBulletGraph"
                            Foreground="#FFFCAB54"
                            Background="#FFCCA376"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <telerik:RadHorizontalBulletGraph Grid.Column="0"
                                                  AutoRange="False"
                                                  Width="450"
                                                  Height="80"
                                                  Minimum="0"
                                                  Maximum="100"
                                                  FeaturedMeasure="60"
                                                  ComparativeMeasure="65"
                                                  ProjectedValue="75">
                    <telerik:RadHorizontalBulletGraph.QualitativeRanges>
                        <telerik:QualitativeRange Value="50"
                                                  Brush="#A8A8A8" />
                        <telerik:QualitativeRange Value="70"
                                                  Brush="#E8E8E8" />
                    </telerik:RadHorizontalBulletGraph.QualitativeRanges>
                </telerik:RadHorizontalBulletGraph>
                <telerik:RadVerticalBulletGraph Grid.Column="2"
                                                FeaturedMeasure="60"
                                                ComparativeMeasure="65"
                                                ProjectedValue="75"
                                                Maximum="100"
                                                Width="80"
                                                Height="300">
                    <telerik:RadVerticalBulletGraph.QualitativeRanges>
                        <telerik:QualitativeRange Brush="#A8A8A8"
                                                  Value="150" />
                        <telerik:QualitativeRange Brush="#C6C8C8"
                                                  Value="225" />
                        <telerik:QualitativeRange Brush="#E8E8E8" />
                    </telerik:RadVerticalBulletGraph.QualitativeRanges>
                </telerik:RadVerticalBulletGraph>
            </Grid>
            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FCAB54"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>

</UserControl>
