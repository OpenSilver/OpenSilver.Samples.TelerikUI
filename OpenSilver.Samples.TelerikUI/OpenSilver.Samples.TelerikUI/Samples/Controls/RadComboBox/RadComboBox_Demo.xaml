<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadComboBox_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="150"
                    Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadComboBox"
                            Foreground="#FFFF65A3"
                            Background="#FFC997AC"
                            Style="{StaticResource HeaderControl_Style}" />
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <telerik:RadComboBox x:Name="LanguagesComboBox"
                                     Margin="2"
                                     DisplayMemberPath="DisplayName"
                                     ItemsSource="{Binding Languages}"
                                     SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                                     Width="150"
                                     Height="40" />
            </StackPanel>

            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FFFF65A3">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadComboBox_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadComboBox" />
                    <local:ViewSourceButtonInfo FileName="RadComboBox_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadComboBox" />
                    <local:ViewSourceButtonInfo FileName="RadComboBox_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadComboBox" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
