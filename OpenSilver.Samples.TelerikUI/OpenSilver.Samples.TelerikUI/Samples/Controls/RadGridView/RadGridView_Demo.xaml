<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadGridView_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <UserControl.Resources>
        <Style x:Key="ApiName"
               TargetType="TextBlock">
            <Setter Property="Margin"
                    Value="5 0 0 0" />
            <Setter Property="FontSize"
                    Value="10" />
            <Setter Property="FontFamily"
                    Value="Verdana" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#FF555555" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
    </UserControl.Resources>

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="550"
                    Width="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadGridView"
                            Foreground="#FFA05BFF"
                            Background="#FFA793C3"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <CheckBox Content="AreRowDetailsFrozen"
                              IsChecked="{Binding AreRowDetailsFrozen, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="CanUserGroupColumns"
                              IsChecked="{Binding CanUserGroupColumns, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="CanUserReorderColumns"
                              IsChecked="{Binding CanUserReorderColumns, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="CanUserResizeColumns"
                              IsChecked="{Binding CanUserResizeColumns, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="CanUserSortColumns"
                              IsChecked="{Binding CanUserSortColumns, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="CanUserResizeRows"
                              IsChecked="{Binding CanUserResizeRows, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="IsFilteringAllowed"
                              IsChecked="{Binding IsFilteringAllowed, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="ShowColumnHeaders"
                              IsChecked="{Binding ShowColumnHeaders, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="ShowGroupPanel"
                              IsChecked="{Binding ShowGroupPanel, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="IsReadOnly"
                              IsChecked="{Binding IsReadOnly, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <CheckBox Content="IsBusy"
                              IsChecked="{Binding IsBusy, ElementName=radGridView, Mode=TwoWay}"
                              Margin="0" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="FrozenColumnCount"
                               Margin="0" />
                    <telerik:RadNumericUpDown VerticalAlignment="Center"
                                              Minimum="0"
                                              Margin="0"
                                              Value="{Binding FrozenColumnCount, ElementName=radGridView, Mode=TwoWay}" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="RowDetailsVisibilityMode"
                               Margin="0" />
                    <telerik:RadComboBox x:Name="rowDetailsVisibilityModeCB"
                                         SelectedItem="{Binding RowDetailsVisibilityMode, ElementName=radGridView, Mode=TwoWay}"
                                         Margin="0" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="SelectionMode"
                               Margin="0" />
                    <telerik:RadComboBox x:Name="selectionModeCB"
                                         SelectedItem="{Binding SelectionMode, ElementName=radGridView, Mode=TwoWay}"
                                         Margin="0" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="GridLinesVisibility"
                               Margin="0" />
                    <telerik:RadComboBox x:Name="gridLinesVisibilityCB"
                                         SelectedItem="{Binding GridLinesVisibility, ElementName=radGridView, Mode=TwoWay}"
                                         Margin="0" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="GridViewSelectionUnit"
                               Margin="0" />
                    <telerik:RadComboBox x:Name="selectionUnitCB"
                                         SelectedItem="{Binding SelectionUnit, ElementName=radGridView, Mode=TwoWay}"
                                         Margin="0" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="FilteringMode"
                               Margin="0" />
                    <telerik:RadComboBox x:Name="filteringModeCB"
                                         SelectedItem="{Binding FilteringMode, ElementName=radGridView, Mode=TwoWay}"
                                         Margin="0" />
                </StackPanel>
                <telerik:RadGridView x:Name="radGridView"
                                     AutoGenerateColumns="True"
                                     Grid.Column="2"
                                     RowIndicatorVisibility="Collapsed"
                                     AutoGeneratingColumn="radGridView_AutoGeneratingColumn"
                                     RowDetailsVisibilityMode="VisibleWhenSelected"
                                     AreRowDetailsFrozen="True">
                    <telerik:RadGridView.RowDetailsTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath}"
                                   Height="64"
                                   Width="64"
                                   HorizontalAlignment="Left" />
                        </DataTemplate>
                    </telerik:RadGridView.RowDetailsTemplate>
                </telerik:RadGridView>
            </Grid>
            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FFA05BFF">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadGridView_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadGridView" />
                    <local:ViewSourceButtonInfo FileName="RadGridView_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadGridView" />
                    <local:ViewSourceButtonInfo FileName="RadGridView_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadGridView" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
