<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadGridView_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="500"
                    Width="750">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadGridView"
                            Foreground="#FFA05BFF"
                            Background="#FFA793C3"
                            Style="{StaticResource HeaderControl_Style}" />
            <telerik:RadGridView x:Name="RadGridView1"
                                 AutoGenerateColumns="True"
                                 Grid.Row="1"
                                 Margin="15"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 AutoGeneratingColumn="RadGridView1_AutoGeneratingColumn"
                                 RowDetailsVisibilityMode="VisibleWhenSelected"
                                 AreRowDetailsFrozen="True">
                <telerik:RadGridView.RowDetailsTemplate>
                    <DataTemplate>
                        <Image Source="{Binding ImagePath}"
                               Height="64"
                               Width="64"
                               HorizontalAlignment="Left"/>
                    </DataTemplate>
                </telerik:RadGridView.RowDetailsTemplate>
            </telerik:RadGridView>
            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FFA05BFF"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>
</UserControl>
