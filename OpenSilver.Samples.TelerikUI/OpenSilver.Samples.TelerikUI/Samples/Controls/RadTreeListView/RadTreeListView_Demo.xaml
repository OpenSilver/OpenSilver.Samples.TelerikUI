<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadTreeListView_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:localTreeView="clr-namespace:OpenSilver.Samples.TelerikUI.TreeListView"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <UserControl.Resources>
        <Style x:Key="ApiName"
               TargetType="TextBlock">
            <Setter Property="Margin"
                    Value="5 0 0 0" />
            <Setter Property="FontSize"
                    Value="10" />
            <Setter Property="FontFamily"
                    Value="Verdana" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#FF555555" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>

        <localTreeView:ColorToBrushConverter x:Key="ColorConverter" />
    </UserControl.Resources>

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="550"
                    Width="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadTreeListView"
                            Foreground="#FFD59851"
                            Background="#FFBFA383"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="TreeLinesVisibility:" />
                    <telerik:RadComboBox x:Name="treeLinesVisibilityCB" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="TreeLinesStrokeThickness:" />
                    <telerik:RadNumericUpDown x:Name="treeLinesStrokeThicknessNud"
                                              Minimum="0"
                                              Maximum="100"
                                              SmallChange="0.1"
                                              LargeChange="1"
                                              Value="0.2"/>
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="TreeLinesBrush:" />
                    <telerik:RadColorPicker x:Name="TreeLinesBrushPicker"
                                            SelectedColor="Black" 
                                            Width="Auto" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="HierarchyIndent:" />
                    <telerik:RadNumericUpDown x:Name="hierarchyIndentNud"
                                              Minimum="0"
                                              Maximum="100"
                                              SmallChange="1"
                                              LargeChange="5"
                                              Value="20" />
                </StackPanel>
                <telerik:RadTreeListView x:Name="treeListView"
                                         Grid.Column="2"
                                         AutoExpandItems="True"
                                         IsReadOnly="True"
                                         ItemsSource="{Binding}"
                                         CanUserFreezeColumns="False"
                                         RowIndicatorVisibility="Collapsed"
                                         CanUserSortColumns="False"
                                         IsFilteringAllowed="False"
                                         TreeLinesVisibility="{Binding SelectedItem, ElementName=treeLinesVisibilityCB}"
                                         TreeLinesStrokeThickness="{Binding Value, ElementName=treeLinesStrokeThicknessNud}"
                                         TreeLinesBrush="{Binding SelectedColor, ElementName=TreeLinesBrushPicker, Converter={StaticResource ColorConverter}}"
                                         HierarchyIndent="{Binding Value, ElementName=hierarchyIndentNud}"
                                         ColumnWidth="*">
                    <telerik:RadTreeListView.ChildTableDefinitions>
                        <telerik:TreeListViewTableDefinition ItemsSource="{Binding Items}" />
                    </telerik:RadTreeListView.ChildTableDefinitions>
                </telerik:RadTreeListView>
            </Grid>
            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FF6F7DFF">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadTreeListView_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTreeListView" />
                    <local:ViewSourceButtonInfo FileName="RadTreeListView_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTreeListView" />
                    <local:ViewSourceButtonInfo FileName="RadTreeListView_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTreeListView" />
                    <local:ViewSourceButtonInfo FileName="FolderViewModel.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTreeListView" />
                    <local:ViewSourceButtonInfo FileName="FolderViewModel.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTreeListView" />
                    <local:ViewSourceButtonInfo FileName="ColorToBrushConverter.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTreeListView" />
                    <local:ViewSourceButtonInfo FileName="ColorToBrushConverter.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadTreeListView" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
