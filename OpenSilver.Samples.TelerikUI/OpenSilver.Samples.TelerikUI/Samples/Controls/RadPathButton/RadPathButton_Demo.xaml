<UserControl
    x:Class="OpenSilver.Samples.TelerikUI.RadPathButton_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}" Height="150" Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="RadPathButton" Foreground="#FF3ADE8F" Background="#FF75B595" Style="{StaticResource HeaderControl_Style}"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <telerik:RadPathButton Click="RadPathButton_Click">
                    <telerik:RadPathButton.PathGeometry>
                        <EllipseGeometry RadiusX="5" RadiusY="5"></EllipseGeometry>
                    </telerik:RadPathButton.PathGeometry>
                    <telerik:RadPathButton.Content>RadPathButton</telerik:RadPathButton.Content>
                </telerik:RadPathButton>
            </StackPanel>

            <local:ViewSourceButton Grid.Row="2" Margin="0,10,0,0" Background="#FF3ADE8F">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadPathButton_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPathButton" />
                    <local:ViewSourceButtonInfo FileName="RadPathButton_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPathButton" />
                    <local:ViewSourceButtonInfo FileName="RadPathButton_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPathButton" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
