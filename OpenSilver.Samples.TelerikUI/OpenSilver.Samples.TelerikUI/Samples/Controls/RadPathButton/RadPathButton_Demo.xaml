<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadPathButton_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="170"
                    Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadPathButton"
                            Foreground="#FF3ADE8F"
                            Background="#FF75B595"
                            Style="{StaticResource HeaderControl_Style}" />
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center">
                <telerik:RadPathButton Content="Increment"
                                       Click="RadPathButton_Click">
                    <telerik:RadPathButton.PathGeometry>
                        <EllipseGeometry RadiusX="10"
                                         RadiusY="10" />
                    </telerik:RadPathButton.PathGeometry>
                    <telerik:RadPathButton.PathStyle>
                        <Style TargetType="Path">
                            <Setter Property="Stretch"
                                    Value="Uniform" />
                            <Setter Property="Fill"
                                    Value="Red" />
                            <Setter Property="Stroke"
                                    Value="Black" />
                            <Setter Property="StrokeThickness"
                                    Value="1" />
                        </Style>
                    </telerik:RadPathButton.PathStyle>
                </telerik:RadPathButton>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="16"
                           Margin="5">
                    <Run Text="Count: " />
                    <Run x:Name="counter"
                         Text="0" />
                </TextBlock>
            </StackPanel>

            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FF3ADE8F">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadPathButton_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPathButton" />
                    <local:ViewSourceButtonInfo FileName="RadPathButton_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPathButton" />
                    <local:ViewSourceButtonInfo FileName="RadPathButton_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadPathButton" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
