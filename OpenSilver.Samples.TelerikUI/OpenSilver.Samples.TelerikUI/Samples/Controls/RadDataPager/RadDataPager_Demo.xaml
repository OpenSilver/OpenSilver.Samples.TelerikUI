<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadDataPager_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <UserControl.Resources>
        <Style x:Key="ApiName"
               TargetType="TextBlock">
            <Setter Property="Margin"
                    Value="5 0 0 0" />
            <Setter Property="FontSize"
                    Value="10" />
            <Setter Property="FontFamily"
                    Value="Verdana" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#FF555555" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
    </UserControl.Resources>

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="500"
                    Width="750">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadDataPager"
                            Foreground="#FFFE7484"
                            Background="#DAB6BB"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="AutoEllipsisMode" />
                    <telerik:RadComboBox x:Name="autoEllipsisModeCB"
                                         SelectedItem="{Binding AutoEllipsisMode, ElementName=pager, Mode=TwoWay}" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="DisplayMode" />
                    <telerik:RadComboBox x:Name="displayModeCB"
                                         SelectedItem="{Binding DisplayMode, ElementName=pager, Mode=TwoWay}" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="NumericButtonCount" />
                    <telerik:RadNumericUpDown VerticalAlignment="Center"
                                              Minimum="0"
                                              IsInteger="True"
                                              Value="{Binding NumericButtonCount, ElementName=pager, Mode=TwoWay}" />
                    <TextBlock Style="{StaticResource ApiName}"
                               Text="PageSize" />
                    <telerik:RadNumericUpDown VerticalAlignment="Center"
                                              Minimum="1"
                                              IsInteger="True"
                                              Value="{Binding PageSize, ElementName=pager, Mode=TwoWay}" />
                </StackPanel>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <telerik:RadGridView x:Name="gridView"
                                         ShowGroupPanel="False" />
                    <telerik:RadDataPager x:Name="pager"
                                          Grid.Row="1" />
                </Grid>
            </Grid>
            <Button Grid.Row="2"
                    Content="VIEW SOURCE..."
                    Click="ButtonViewSource_Click"
                    Background="#FFFE7484"
                    Style="{StaticResource ButtonViewSource_Style}" />
        </Grid>
    </ContentControl>

</UserControl>
