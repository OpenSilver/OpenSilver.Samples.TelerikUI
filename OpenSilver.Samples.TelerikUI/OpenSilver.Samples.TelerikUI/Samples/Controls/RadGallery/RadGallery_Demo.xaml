<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadGallery_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="210"
                    Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadGallery"
                            Foreground="#FFBF6CEE"
                            Background="#FFB390CA"
                            Style="{StaticResource HeaderControl_Style}" />
            <telerik:RadGallery x:Name="radGallery"
                                Grid.Row="1"
                                HorizontalAlignment="Center">
                <telerik:RadGalleryItem>
                    <Border Width="50"
                            Height="20"
                            Background="Orange" />
                </telerik:RadGalleryItem>
                <telerik:RadGalleryItem>
                    <Ellipse Width="50"
                             Height="20"
                             Fill="Red" />
                </telerik:RadGalleryItem>
                <telerik:RadGalleryItem>
                    <Path Width="50"
                          Height="20"
                          Fill="Green"
                          Data="m 25,0 L 50,20 0,20Z" />
                </telerik:RadGalleryItem>
                <telerik:RadGalleryItem>
                    <Border Width="50"
                            Height="20"
                            Background="Yellow" />
                </telerik:RadGalleryItem>
                <telerik:RadGalleryItem>
                    <Border Width="50"
                            Height="20"
                            Background="Purple" />
                </telerik:RadGalleryItem>
            </telerik:RadGallery>

            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FFBF6CEE">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadGallery_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadGallery" />
                    <local:ViewSourceButtonInfo FileName="RadGallery_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadGallery" />
                    <local:ViewSourceButtonInfo FileName="RadGallery_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadGallery" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>
</UserControl>
