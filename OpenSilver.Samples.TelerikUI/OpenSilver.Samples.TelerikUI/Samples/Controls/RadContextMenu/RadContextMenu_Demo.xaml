<UserControl
    x:Class="OpenSilver.Samples.TelerikUI.RadContextMenu_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI">

    <ContentControl Style="{StaticResource Card_Style}" Height="150" Width="220">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="RadContextMenu" Foreground="#FFE45EE2" Background="#FFE45EE2" Style="{StaticResource HeaderControl_Style}"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Right click the box below."/>
                    <Border x:Name="ContextMenuBorder" Background="LightGray" Width="50" Height="20">
                        <telerik:RadContextMenu.ContextMenu>
                            <telerik:RadContextMenu>
                                <telerik:RadMenuItem Header="Red" Click="RadMenuItemRed_Click"/>
                                <telerik:RadMenuItem Header="Green"  Click="RadMenuItemGreen_Click"/>
                                <telerik:RadMenuItem Header="Blue"  Click="RadMenuItemBlue_Click"/>
                                <telerik:RadMenuItem IsSeparator="True" />
                                <telerik:RadMenuItem Header="Reset"  Click="RadMenuItemReset_Click"/>
                            </telerik:RadContextMenu>
                        </telerik:RadContextMenu.ContextMenu>
                    </Border>
                </StackPanel>
            </StackPanel>

            <local:ViewSourceButton Grid.Row="2" Margin="0,10,0,0" Background="#FFE45EE2">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadContextMenu_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadContextMenu" />
                    <local:ViewSourceButtonInfo FileName="RadContextMenu_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadContextMenu" />
                    <local:ViewSourceButtonInfo FileName="RadContextMenu_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadContextMenu" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>

</UserControl>
