<UserControl x:Class="OpenSilver.Samples.TelerikUI.RadListBox_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OpenSilver.Samples.TelerikUI"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <ContentControl Style="{StaticResource Card_Style}"
                    Height="550"
                    Width="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="RadListBox"
                            Foreground="#FF6F98FF"
                            Background="#FF93A5D1"
                            Style="{StaticResource HeaderControl_Style}" />
            <Grid Grid.Row="1"
                  Margin="75,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <telerik:RadListBox x:Name="radListBox"
                                    Grid.Column="0"
                                    ItemsSource="{Binding}"
                                    SelectedIndex="0"
                                    IsScrollIntoViewEnabled="False"
                                    FontSize="20">
                    <telerik:RadListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Margin="3,5,0,5">
                                <Image Source="{Binding ImagePath}"
                                       Width="40"
                                       Height="40"
                                       Stretch="Fill"
                                       Margin="3,0,3,0" />
                                <TextBlock Text="{Binding Path=Name}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </telerik:RadListBox.ItemTemplate>
                </telerik:RadListBox>
                <telerik:RadTransitionControl Grid.Column="1"
                                              Content="{Binding SelectedItem, ElementName=radListBox}">
                    <telerik:RadTransitionControl.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical"
                                        Margin="5,10,0,30"
                                        HorizontalAlignment="Center"
                                        TextElement.FontSize="14">
                                <Image Source="{Binding ImagePath}"
                                       Stretch="Fill"
                                       Width="200"
                                       Height="200"/>
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,15,0,0">
                                    <TextBlock Text="Name: " />
                                    <TextBlock Text="{Binding Path=Name}"
                                               Margin="4,0,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,15,0,0">
                                    <TextBlock Text="Rotation: " />
                                    <TextBlock Text="{Binding RotationPeriod}"
                                               Margin="4,0,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,15,0,0">
                                    <TextBlock Text="Orbit: " />
                                    <TextBlock Text="{Binding OrbitalPeriod}"
                                               Margin="4,0,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,15,0,0">
                                    <TextBlock Text="Radius: " />
                                    <TextBlock Text="{Binding Radius}"
                                               Margin="4,0,0,0" />
                                    <TextBlock Text="km"
                                               Margin="2,0,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:RadTransitionControl.ContentTemplate>
                </telerik:RadTransitionControl>
            </Grid>

            <local:ViewSourceButton Grid.Row="2"
                                    Margin="0,10,0,0"
                                    Background="#FF6F98FF">
                <local:ViewSourceButton.Sources>
                    <local:ViewSourceButtonInfo FileName="RadListBox_Demo.xaml"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadListBox" />
                    <local:ViewSourceButtonInfo FileName="RadListBox_Demo.xaml.cs"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadListBox" />
                    <local:ViewSourceButtonInfo FileName="RadListBox_Demo.xaml.vb"
                                                RelativePath="OpenSilver.Samples.TelerikUI/OpenSilver.Samples.TelerikUI/Samples/Controls/RadListBox" />
                </local:ViewSourceButton.Sources>
            </local:ViewSourceButton>
        </Grid>
    </ContentControl>

</UserControl>
